---
import MobileHeader from "./MobileHeader.astro";
import MobileCreativeDeveloper from "./MobileCreativeDeveloper.astro";
import MobileMarquee from "./MobileMarquee.astro";
---

<div class="home">
  <MobileHeader />
  <MobileCreativeDeveloper />
  <MobileMarquee />
</div>

<style>
  .home {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    height: 100dvh;
  }
  .creative {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 80%;
    height: 100%;
  }
</style>
