---
import BentoNav from "../../BentoNav.astro";
import BentoSkillsCard from "./BentoSkillsCard.astro";
import BentoContactsCard from "../BentoContactsCard.astro";
---

<div class="bento-wrapper">
  <div class="bento main">
    <div class="first-row">
      <BentoNav
        color="var(--blue-color)"
        border="1px solid var(--blue-color)"
        backgroundColor="#FAF1DB"
      />
    </div>

    <div class="second row">
      <BentoContactsCard />
    </div>

    <div class="third row">
      <BentoSkillsCard />
    </div>
  </div>
</div>

<style>
  @media only screen and (max-width: 1200px) {
    .bento-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 100dvw;
      height: 100dvh;
      background-color: #faf1db;
    }
    .bento.main {
      display: flex;
      flex-direction: column;
      width: 96dvw;
      height: 96dvh;
      gap: 1.6dvw;
    }
    .second.row {
      display: flex;
      flex-grow: 1;
    }
  }
</style>
