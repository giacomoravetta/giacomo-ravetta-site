<script>
  import { timeline, stagger } from "motion";

  const elHand = document.getElementsByClassName("svg-wrapper-ciao web")[0];

  elHand.addEventListener("mouseenter", () => {
    const sequenceHand = [
      [
        ".svg-wrapper-ciao path",
        { y: [0, -10, 10, 0] },
        { duration: 1, delay: stagger(0.1) },
      ],
      [
        ".hand",
        { left: ["50%"], translateX: "-50%", translateY: "-50%" },
        { duration: 1 },
      ],
      [
        ".hand",
        {
          rotate: [0, -20, 20, -20, 20, 0],
          translateX: "-50%",
          translateY: "-50%",
        },
        { duration: 1.6 },
      ],
      [".hand", { left: ["120%"] }, { duration: 1 }],
    ];

    timeline(sequenceHand, { duration: 5 });
  });
</script>
