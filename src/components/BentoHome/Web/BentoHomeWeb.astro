---
import BentoDandD from "./BentoDandD.astro";
import BentoHomeMarquee from "./BentoHomeMarquee.astro";
import BentoHomeCiao from "./BentoHomeCiao.astro";
import BentoHomeLinks from "./BentoHomeLinks.astro";
import BentoHomeHireMe from "./BentoHomeHireMe.astro";
import BentoProfileCard from "../BentoProfileCard.astro";
import BentoHomeWhaleCard from "./BentoHomeWhaleCard.astro";
---

<div class="flex flex-col h-[100dvh] w-full gap-[1.6dvw] p-[1.6dvw]">
    <!-- Header -->
    <div class="border-white border-1 rounded-xl h-[8dvh] text-white px-4 md:rounded-[25px] flex justify-between items-center">
        <div class="flex items-center h-full gap-1">
            <p class="font-inter font-black text-[2dvw] md:text-4xl m-0">GIACOMO RAVETTA </p>
            <p class="pipe font-inter font-black text-[2dvw] md:text-4xl">|</p>
        </div>
        <a href="mailto:info@giacomoravetta.com" class="flex items-center h-full text-[2dvw] md:text-4xl">info@giacomoravetta.com</a>
    </div>

    <!-- Middle section with profile and D&D -->
    <div class="flex flex-row gap-[1.6dvw] h-[64dvh]">
        <div class="flex flex-col gap-[1.6dvh] h-full w-[80%]">
            <BentoDandD  />

            <BentoHomeWhaleCard />

        </div>
        <div class="w-[40%]">
            <BentoProfileCard  />
        </div>
    </div>

    <!-- Marquee section -->

        <BentoHomeMarquee />


    <!-- Bottom row with 4 components -->
    <div class="flex gap-[1.6dvw] h-[10dvh] w-full">
         <BentoHomeCiao/>
         <BentoHomeHireMe />

    </div>
</div>

<style>
.pipe {
  animation: blink 1.5s step-end infinite;
}

@keyframes blink {
  0%, 100% { opacity: 1; }
  50% { opacity: 0; }
}
</style>
