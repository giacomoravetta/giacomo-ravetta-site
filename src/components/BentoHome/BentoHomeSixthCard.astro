---
import BentoCard from "../BentoCard.astro";
---

<BentoCard color="#FAF1DB">
  <div class="card-content">
    <div class="title">Designer</div>
  </div>
</BentoCard>

<style>
  .card-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 60px 30px;
  }
  .card-content .title {
    font-size: 7vw;
    font-weight: 900;
    line-height: 0.9;
  }
</style>
