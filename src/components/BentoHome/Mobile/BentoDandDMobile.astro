---
import BentoCard from "../../BentoCard.astro";
---

<div class="dandd">
  <div class="first-line">
    <div class="developer">
      <BentoCard color="#FAF1DB">
        <div class="card-content">
          <div class="title">Developer</div>
        </div>
      </BentoCard>
    </div>
    <div class="and">
      <BentoCard color="#FAF1DB">
        <div class="card-content">
          <div class="title">&</div>
        </div>
      </BentoCard>
    </div>
  </div>
  <div class="second-line">
    <div class="command-button">
      <BentoCard color="#FAF1DB">
        <div class="card-content">
          <div class="title command">âŒ˜</div>
        </div>
      </BentoCard>
    </div>
    <div class="designer">
      <BentoCard color="#FAF1DB">
        <div class="card-content">
          <div class="title">Designer</div>
        </div>
      </BentoCard>
    </div>
  </div>
