---
import BentoCard from "../BentoCard.astro";
import BentoProfile from "../BentoProfile.astro";
---

<BentoCard color="transparent" border="1px solid white">
  <BentoProfile />
  <div class="subtitle">
    <div class="avaiable">
      <div>Avaiable to work</div>
      <div class="pulsating-circle"></div>
    </div>
  </div>
  <div class="separator white"></div>
  <p>Hi, my name is <strong>Giacomo Ravetta</strong> Welcome to my website!</p>
</BentoCard>

<style>
  @media only screen and (max-width: 1200px) {
    .subtitle {
      color: white;
      display: flex;
      flex-direction: row;
      justify-content: right;
      align-items: center;
      font-size: 1vw;
      font-weight: 500;
    }

    .avaiable {
      display: flex;
      padding: 20px;
      flex-direction: row;
      align-items: center;
      color: white;
      gap: 20px;
    }

    .separator.white {
      height: 1px;
      background-color: rgb(255, 255, 255);
    }

    p {
      padding: 20px;
      color: white;
      font-size: 1vw;
    }

    .pulsating-circle {
      width: 1vh;
      height: 1vh;
      position: relative;
    }
  }

  .avaiable {
    display: flex;
    padding: 1.6dvw;
    flex-direction: row;
    align-items: center;
    color: white;
    font-size: 2dvw;
    padding: 1.6dvw;
  }

  p {
    padding: 3dvw;
    color: white;
    font-size: 3.2dvw;
  }

  .separator.white {
    height: 1px;
    background-color: rgb(255, 255, 255);
  }

  .pulsating-circle:before {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    display: block;
    width: 300%;
    height: 300%;
    box-sizing: border-box;
    margin-left: -100%;
    margin-top: -100%;
    border-radius: 50%;
    background-color: #1b7c4d;
    animation: pulse-ring 2s cubic-bezier(0.215, 0.61, 0.355, 1) infinite;
  }

  .pulsating-circle:after {
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    display: block;
    width: 100%;
    height: 100%;
    background-color: rgb(50, 237, 140);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.3);
    animation: pulse-dot 2s cubic-bezier(0.455, 0.03, 0.515, 0.955) -0.4s infinite;
  }
  @keyframes pulse-ring {
    0% {
      transform: scale(0.33);
    }
    80%,
    100% {
      opacity: 0;
    }
  }

  @keyframes pulse-dot {
    0% {
      transform: scale(0.8);
    }
    50% {
      transform: scale(1);
    }
    100% {
      transform: scale(0.8);
    }
  }
</style>
