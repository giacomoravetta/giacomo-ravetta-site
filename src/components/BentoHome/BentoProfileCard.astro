---
interface Props {
  border?: string;
  class?: string;
}

const { border = "1px solid white", class: className = "" } = Astro.props;

import BentoCard from "../BentoCard.astro";
import BentoProfile from "../BentoProfile.astro";
---

<BentoCard border={border} class={className}>
  <div class="flex flex-col justify-between h-full gap-2 p-5 ">
    <div class="flex-shrink-0">
      <BentoProfile />

    </div>
    <div class="text-white flex justify-center items-center text-center flex-1 min-h-0">
      <p class="text-[clamp(1rem,4vw,2rem)] md:text-[clamp(1.2rem,1.5vw,1.8rem)] leading-tight">
        Hi, my name is <strong>Giacomo Ravetta</strong> <br /> Welcome to my website!
      </p>
    </div>
  </div>
</BentoCard>

<style>
  @keyframes pulse-ring {
    0% {
      transform: scale(0.33);
      opacity: 1;
    }
    80%, 100% {
      opacity: 0;
      transform: scale(1);
    }
  }

  @keyframes pulse-dot {
    0% {
      transform: scale(0.8);
    }
    50% {
      transform: scale(1);
    }
    100% {
      transform: scale(0.8);
    }
  }
</style>
