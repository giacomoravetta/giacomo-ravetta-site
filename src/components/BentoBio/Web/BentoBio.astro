---
import BentoNav from "../../BentoNav.astro";
import BentoAchievements from "./BentoAchievements.astro";
import BentoBioCard from "../BentoBioCard.astro";
---

<div class="bento-wrapper">
  <div class="bento main">
    <div class="first-row">
      <div class="left">
        <div class="nav-wrapper">
          <BentoNav
            color="var(--blue-color)"
            border="1px solid var(--blue-color)"
            backgroundColor="#FAF1DB"
          />
        </div>
        <div class="first-card">
          <BentoBioCard />
        </div>
      </div>

      <div class="right">
        <div class="profile-wrapper">
          <BentoAchievements />
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .bento-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100dvw;
    height: 100dvh;
    background-color: #faf1db;
  }

  .bento.main {
    display: flex;
    flex-direction: column;
    width: 94dvw;
    height: 94dvh;
    gap: 1.6dvw;
  }

  .first-row {
    display: flex;
    flex-direction: row;
    overflow: hidden;
    gap: 1.6dvw;
  }

  .second-row {
    display: flex;
    flex-direction: row;
    flex-grow: 1;
  }

  .first-row .left {
    display: flex;
    flex-direction: column;
    flex-basis: 70%;
    max-width: 70%;
    gap: 1.6dvw;
  }

  .first-row .left .nav-wrapper {
    display: flex;
    align-items: flex-start;
  }
  .first-row .left .first-card {
    display: flex;
    flex-grow: 1;
    color: var(--blue-color);
  }

  .first-row .right {
    display: flex;
    flex-basis: calc(30% - 1.6dvw);
  }
  .first-row .right .profile-wrapper {
    display: flex;
    flex-grow: 1;
  }
</style>
