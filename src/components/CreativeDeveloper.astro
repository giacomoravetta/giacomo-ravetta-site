---
import IconAstro from "./Icons/IconAstro.astro";
---

<div class="hero center">
  <div class="main text">
    <div class="line">
      <div class="letter">C</div>
      <div class="letter">R</div>
      <div class="letter">E</div>
      <div class="letter">A</div>
      <div class="letter">T</div>
      <div class="letter">I</div>
      <div class="letter">V</div>
      <div class="letter">E</div>
    </div>
    <div class="line">
      <div class="letter">D</div>
      <div class="letter">E</div>
      <div class="letter">V</div>
      <div class="letter">E</div>
      <div class="letter">L</div>
      <div class="letter">O</div>
      <div class="letter">P</div>
      <div class="letter">E</div>
      <div class="letter">R</div>
    </div>
  </div>
  <div class="designer">UI/UX <br />DESIGNER</div>
</div>

<style>
  .hero.center {
    position: relative;
    display: flex;
    flex-basis: 80%;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    width: 100%;
    height: 100%;
    --black-circle-width: 80%;
    --black-circle-height: 10%;
  }

  .main.text {
    width: 100%;
  }

  .hero .line {
    display: block;
    margin: -10vw;
  }

  .hero .letter {
    display: inline-block;
    font-size: 14vw;
    color: transparent;
    -webkit-text-stroke: 5px var(--secondary-color);
  }

  .designer {
    display: flex;
    justify-content: center;
    align-items: center;
    left: var(--black-circle-width);
    top: var(--black-circle-height);
    border-radius: 50%;
    width: 16vw;
    height: 16vw;
    font-size: 3vw;
    position: absolute;
    color: var(--main-color);
    background-color: var(--secondary-color);
    z-index: 1;
    --height-designer: 100%;
  }

  .links {
    position: absolute;
    left: 0;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    height: 30vh;
    border-radius: 0px 25px 25px 0px;
    width: 6vw;
    background-color: var(--secondary-color);
  }
</style>

<script>
  import { timeline, stagger } from "motion";

  const sequence = [
    [".letter", { opacity: [0, 1] }, { delay: stagger(0.025) }],
    [".letter", { fontSize: ["20vw", "14vw"] }],
    [
      ".designer",
      {
        y: ["-200%", "10%"],
        transform: "rotate(-30deg)",
      },
    ],
  ];

  timeline(sequence, { duration: 4 });
</script>
