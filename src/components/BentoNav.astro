---
import BentoCard from "./BentoCard.astro";
---

<div class="nav">
  <div class="rounded me">
    <BentoCard border="1px solid white"><a href="/">Home</a></BentoCard>
  </div>
  <div class="rounded services">
    <BentoCard border="1px solid white"
      ><a href="/services">Services</a></BentoCard
    >
  </div>
  <div class="rounded skills">
    <BentoCard border="1px solid white"><a href="/skills">Skills</a></BentoCard>
  </div>
  <div class="rounded contacts">
    <BentoCard border="1px solid white"
      ><a href="/services">Contacts</a></BentoCard
    >
  </div>
</div>

<style>
  .nav {
    display: flex;
    flex-grow: 1;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 1.6dvw;
  }

  .rounded {
    display: flex;
    flex-grow: 1;
    height: 100%;
    justify-content: center;
    align-items: center;
    color: white;
    border-radius: 25px;
    max-height: 10dvh;
    text-align: center;
    font-size: 6dvw;
  }
  .rounded:hover {
    color: black;
    background-color: white;
  }
  .rounded:active {
    color: black;
    background-color: white;
  }
</style>
