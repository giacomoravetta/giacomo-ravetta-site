---
import BentoCard from "./BentoCard.astro";
---

<div class="nav">
  <div class="rounded me">
    <BentoCard color="transparent" border="1px solid white">Home</BentoCard>
  </div>
  <div class="rounded services">
    <BentoCard color="transparent" border="1px solid white">Services</BentoCard>
  </div>
  <div class="rounded skills">
    <BentoCard color="transparent" border="1px solid white">Skills</BentoCard>
  </div>
  <div class="rounded contacts">
    <BentoCard color="transparent" border="1px solid white">Contacts</BentoCard>
  </div>
</div>

<style>
  .nav {
    display: flex;
    flex-grow: 1;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    gap: 1.6dvw;
  }

  .rounded {
    display: flex;
    flex-grow: 1;
    height: 100%;
    justify-content: center;
    align-items: center;
    color: white;
    border-radius: 25px;
    max-height: 10dvh;
    text-align: center;
    font-size: calc(12px + 2.8dvw);
  }
</style>
