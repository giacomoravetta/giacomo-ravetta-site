---
import BentoCard from "./BentoCard.astro";
---

<div class="nav">
  <div class="item">
    <BentoCard border="1px solid white"><a href="/">Home</a> </BentoCard>
  </div>
  <div class="item">
    <BentoCard border="1px solid white"
      ><a href="/services">Services</a>
    </BentoCard>
  </div>
  <div class="item">
    <BentoCard border="1px solid white">
      <a href="/skills">Skills</a></BentoCard
    >
  </div>
  <div class="item">
    <BentoCard border="1px solid white"
      ><a href="/contacts">Contacts</a></BentoCard
    >
  </div>
</div>

<style>
  @media only screen and (max-width: 1200px) {
    .item {
      font-size: 3dvw;
    }
  }
  @media only screen and (min-width: 1200px) {
    .item {
      font-size: 1.4dvw;
    }
  }
  .nav {
    display: flex;
    flex-grow: 1;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }
  .item {
    color: white;
    width: 23%;
    border-radius: 25px;
  }
  a {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-grow: 1;
  }

  .item:hover {
    color: black;
    background-color: white;
  }
  .item:active {
    color: black;
    background-color: white;
  }
</style>
