---
interface Props {
  text: string;
  href: string;
  graphics: {
    svg: ImageMetadata | string;
    top: number;
    left: number;
    height: number;
    width: number;
  }[];
}

const { text, href, graphics } = Astro.props;
---

<div>
  <a href={href}>
    {
      graphics.map((graphic) => (
        <img
          src={graphic.svg.src}
          width={graphic.width}
          height={graphic.height}
          style={`
        top: ${graphic.top}px; 
        left: ${graphic.left}px; 
        --move-distance: 600px;
        `}
        />
      ))
    }
    <p>{text}</p>
  </a>
</div>

<style>
  div {
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 100px;
    margin-right: 100px;
    background-color: #081e3d;
    border: solid 1px #ffc845;
  }

  p {
    position: relative;
    font-family: "Archivo Black", sans-serif;
    font-size: 30px;
    z-index: 1;
    color: #ffc845;
    transition: font-size 2s;
  }

  div:hover p {
    font-size: 60px;
  }

  img {
    position: absolute;
    z-index: 0;
    transform: translateX(0);
    transition: transform 5s ease-out;
  }

  div:hover img {
    transform: translateX(var(--move-distance));
    opacity: 100;
  }

  a {
    text-decoration: none;
  }
</style>
